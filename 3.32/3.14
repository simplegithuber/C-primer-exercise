#include <iostream>
#include <vector>

using std::vector;
using std::cin;  using std::cout;
using std::endl;

int main() {
    vector<int> v;
    int i;
    char ch;
    cout << "请输入一组整数" << endl;
    while (cin >> i) {
        v.push_back(i);
        cout << "继续输入数字(输入y)" << "停止输入并退出（输入#）" << endl;
        cin >> ch;
        if (ch == 'y')
            cout << "请继续输入" << endl;
        else
            break;
    }
    for (auto c : v)
        cout << c;
    cout << endl;
    return 0;
}
