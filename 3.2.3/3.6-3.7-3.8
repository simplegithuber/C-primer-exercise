  //用传统的while语句
#include <iostream>
#include <string>
  
using std::string;
using std::cin;  using std::cout;
using std::endl;

int main() {
    string str("abcdefg");
    decltype(str.size()) tem = 0;
    while(tem < str.size()) {
        str[tem] = 'x';
        tem++;
    }
    cout << str << endl;
    return 0;
}

