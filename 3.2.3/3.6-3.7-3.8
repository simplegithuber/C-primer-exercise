  //  用传统的for语句
#include <iostream>
#include <string>

using std::string;
using std::cin;  using std::cout;
using std::endl;

int main() {
    string str("abcdefg");
    for (decltype(str.size()) tem = 0; tem < str.size(); tem++) {
        str[tem] = 'x';
    }
    cout << str << endl;
    return 0;
} 
